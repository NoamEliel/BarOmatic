<Window x:Class="BarOmaticGUI2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BarOmatic"
        WindowState="Normal"
        Width="1600"
        Height="900"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/BlackAndWhiteIcon.ico"
        Background="White">

    <Border BorderBrush="Black" BorderThickness="10" Margin="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="0.70*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#f0f0f0" Padding="15">
                <StackPanel VerticalAlignment="Top">
                    <StackPanel HorizontalAlignment="Center" Width="250" Margin="0,0,0,0">

                        <TextBlock Text="BarOmatic" FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,0"/>

                        <TextBlock Text="Select Event:" FontSize="16" Margin="0,0,0,5"/>
                        <ComboBox x:Name="EventComboBox" Height="25"
                                  SelectionChanged="InputChanged_UpdatePanel"/>

                        <TextBlock Text="Select Bars:" FontSize="16" Margin="0,15,0,5"/>
                        <ListBox x:Name="BarComboBox" Height="150" SelectionMode="Multiple"
                                 SelectionChanged="InputChanged_UpdatePanel"/>

                        <TextBlock Text="Guest Count:" FontSize="16" Margin="0,20,0,5"/>
                        <TextBox x:Name="GuestCountTextBox" Height="25"
                                 TextChanged="InputChanged_UpdatePanel"/>

                        <TextBlock Text="Event Hours:" FontSize="16" Margin="0,15,0,5"/>
                        <TextBox x:Name="EventHoursTextBox" Height="25"
                                 TextChanged="InputChanged_UpdatePanel"/>

                        <TextBlock Text="Time Of Day:" FontSize="16" Margin="0,15,0,5"/>
                        <ComboBox x:Name="TimeOfDayComboBox" Height="25"
                                  SelectionChanged="InputChanged_UpdatePanel">
                            <ComboBoxItem Content="Morning"/>
                            <ComboBoxItem Content="Afternoon"/>
                            <ComboBoxItem Content="Evening"/>
                        </ComboBox>
                    </StackPanel>

                    <Border Height="7" Background="Black" HorizontalAlignment="Stretch" Margin="-15,20,-15,0"/>

                    <StackPanel x:Name="LeftSummaryPanel" Margin="0,20,0,0" HorizontalAlignment="Center" Width="250" />

                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <Border Grid.Column="2" Background="WhiteSmoke" Margin="0" BorderBrush="Black" BorderThickness="2">
                <Grid x:Name="RightPanelGrid">
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
